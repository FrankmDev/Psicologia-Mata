---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface ContactItem {
  icon: string;
  label: string;
  value: string;
  href?: string;
  subvalue?: string;
}

const contactInfo: ContactItem[] = [
  {
    icon: "M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z",
    label: "Teléfono",
    value: "661 471 971",
    href: "tel:+34661471971"
  },
  {
    icon: "M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75",
    label: "Email",
    value: "mangelesmatacala@hotmail.com",
    href: "mailto:mangelesmatacala@hotmail.com"
  },
  {
    icon: "M15 10.5a3 3 0 11-6 0 3 3 0 016 0z M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z",
    label: "Consulta",
    value: "C/ Rodríguez Sánchez, 22",
    subvalue: "14003 Córdoba"
  }
];

const availability = [
  { label: "Respuesta", value: "24 horas" },
  { label: "Confidencialidad", value: "Total" },
  { label: "Modalidad", value: "Presencial" }
];
---

<Layout 
  title="Contacto | María Ángeles Mata - Psicóloga en Córdoba"
  description="Contacta con María Ángeles Mata, psicóloga en Córdoba. Reserva tu primera consulta por teléfono, email o formulario."
>
  <Header activePage="Contacto" />
  
  <main id="main-content">
    
    <!-- Hero -->
    <section class="section bg-alabaster relative overflow-hidden" aria-labelledby="contact-heading">
      <div class="bg-aurora"></div>
      
      <div class="container-editorial relative z-10">
        <div class="max-w-4xl" data-reveal>
          <span class="label-section mb-8">Contacto</span>
          <h1 id="contact-heading" class="title-section mb-8">
            Dar el primer paso es lo más <em>difícil</em>
          </h1>
          <p class="text-lead text-taupe max-w-2xl">
            Si has llegado hasta aquí, algo dentro de ti sabe que mereces sentirte mejor. 
            Yo estoy aquí para escucharte. Sin juzgarte, sin prisas.
          </p>
        </div>
      </div>
    </section>

    <!-- Contenido principal - Layout asimétrico mejorado -->
    <section class="section bg-cream relative">
      <div class="container-editorial">
        
        <div class="grid lg:grid-cols-12 gap-12 lg:gap-16">
          
          <!-- Columna Info - 5 columnas -->
          <div class="lg:col-span-5" data-reveal>
            
            <!-- Tarjeta de presentación -->
            <div class="bg-alabaster p-8 lg:p-10 border border-border-delicate mb-8 relative overflow-hidden">
              {/* Decorativo */}
              <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-olive/5 to-transparent rounded-bl-full"></div>
              
              <span class="text-label text-olive mb-6 block">Cómo contactarme</span>
              <h2 class="font-serif text-3xl lg:text-4xl text-ink mb-8">
                Estoy aquí
              </h2>
              
              <div class="space-y-6">
                {contactInfo.map((item, index) => (
                  <div class="group">
                    {item.href ? (
                      <a href={item.href} class="flex items-start gap-5 p-4 -mx-4 hover:bg-cream/50 transition-colors duration-300">
                        <div class="w-12 h-12 rounded-full bg-cream border border-border-delicate flex items-center justify-center text-olive shrink-0 group-hover:bg-olive group-hover:text-alabaster group-hover:border-olive transition-all duration-500">
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
                          </svg>
                        </div>
                        <div class="pt-1">
                          <p class="text-label-sm text-taupe mb-1">{item.label}</p>
                          <p class="font-serif text-xl text-ink group-hover:text-olive transition-colors duration-300">{item.value}</p>
                          {item.subvalue && <p class="text-body-sm text-taupe mt-1">{item.subvalue}</p>}
                        </div>
                      </a>
                    ) : (
                      <div class="flex items-start gap-5 p-4 -mx-4">
                        <div class="w-12 h-12 rounded-full bg-cream border border-border-delicate flex items-center justify-center text-olive shrink-0">
                          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
                          </svg>
                        </div>
                        <div class="pt-1">
                          <p class="text-label-sm text-taupe mb-1">{item.label}</p>
                          <p class="font-serif text-xl text-ink">{item.value}</p>
                          {item.subvalue && <p class="text-body-sm text-taupe mt-1">{item.subvalue}</p>}
                        </div>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Disponibilidad destacada mejorada -->
            <div class="bg-charcoal p-8 lg:p-10 text-alabaster relative overflow-hidden">
              {/* Decorativo */}
              <div class="absolute -bottom-8 -right-8 w-32 h-32 rounded-full bg-olive/20 blur-2xl"></div>
              
              <div class="relative z-10">
                <div class="flex items-center gap-3 mb-4">
                  <span class="relative flex h-3 w-3">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-olive opacity-75"></span>
                    <span class="relative inline-flex rounded-full h-3 w-3 bg-olive"></span>
                  </span>
                  <span class="text-label text-olive">Disponible</span>
                </div>
                <p class="text-body text-taupe-light mb-4">
                  De lunes a viernes en Córdoba. La primera consulta es sin compromiso: solo hablamos y vemos si encajamos.
                </p>
                <div class="flex items-center gap-2 text-label-sm text-alabaster/60">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>Sesiones de 50 minutos</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Columna Formulario - 7 columnas -->
          <div class="lg:col-span-7" data-reveal data-reveal-delay="100">
            <div class="bg-alabaster p-8 lg:p-12 border border-border-delicate relative">
              {/* Borde decorativo */}
              <div class="absolute top-0 left-0 w-full h-[2px] bg-gradient-to-r from-olive via-olive/50 to-transparent"></div>
              
              <div class="mb-10">
                <span class="text-label text-olive mb-6 block">Escríbeme</span>
                <h2 class="font-serif text-3xl lg:text-4xl text-ink">
                  Cuéntame qué te trae aquí
                </h2>
                <p class="text-body-sm text-taupe mt-4">
                  No tienes que tenerlo todo claro. Solo escribe lo que sientas. Te responderé lo antes posible.
                </p>
              </div>
              
              <form class="space-y-6" action="#" method="POST">
                <div class="grid sm:grid-cols-2 gap-6">
                  <div class="group">
                    <label for="nombre" class="block text-label text-taupe mb-3 group-focus-within:text-olive transition-colors">
                      Tu nombre <span class="text-olive">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="nombre" 
                      name="nombre" 
                      placeholder="Cómo te llamo" 
                      class="w-full px-4 py-4 bg-cream border border-border-delicate text-ink focus:outline-none focus:border-olive focus:bg-alabaster transition-all duration-300 placeholder:text-taupe-light/70"
                      required 
                    />
                  </div>
                  <div class="group">
                    <label for="telefono" class="block text-label text-taupe mb-3 group-focus-within:text-olive transition-colors">
                      Teléfono
                    </label>
                    <input 
                      type="tel" 
                      id="telefono" 
                      name="telefono" 
                      placeholder="Si prefieres que te llame" 
                      class="w-full px-4 py-4 bg-cream border border-border-delicate text-ink focus:outline-none focus:border-olive focus:bg-alabaster transition-all duration-300 placeholder:text-taupe-light/70"
                    />
                  </div>
                </div>
                
                <div class="group">
                  <label for="email" class="block text-label text-taupe mb-3 group-focus-within:text-olive transition-colors">
                    Email <span class="text-olive">*</span>
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    placeholder="tu@email.com" 
                    class="w-full px-4 py-4 bg-cream border border-border-delicate text-ink focus:outline-none focus:border-olive focus:bg-alabaster transition-all duration-300 placeholder:text-taupe-light/70"
                    required 
                  />
                </div>
                
                <div class="group">
                  <label for="servicio" class="block text-label text-taupe mb-3 group-focus-within:text-olive transition-colors">
                    ¿Qué te preocupa?
                  </label>
                  <div class="relative">
                    <select 
                      id="servicio" 
                      name="servicio"
                      class="w-full px-4 py-4 bg-cream border border-border-delicate text-ink focus:outline-none focus:border-olive focus:bg-alabaster transition-all duration-300 appearance-none cursor-pointer pr-12"
                    >
                      <option value="">Elige lo que más se acerque</option>
                      <option value="individual">Me siento mal y no sé por qué</option>
                      <option value="pareja">Problemas con mi pareja</option>
                      <option value="familiar">Conflictos familiares</option>
                      <option value="evaluacion">Problemas de memoria o atención</option>
                      <option value="cognitiva">Estimulación para persona mayor</option>
                      <option value="otro">Otro / No estoy seguro</option>
                    </select>
                    {/* Flecha custom */}
                    <svg class="absolute right-4 top-1/2 -translate-y-1/2 w-5 h-5 text-taupe pointer-events-none" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                    </svg>
                  </div>
                </div>
                
                <div class="group">
                  <label for="mensaje" class="block text-label text-taupe mb-3 group-focus-within:text-olive transition-colors">
                    Tu mensaje <span class="text-olive">*</span>
                  </label>
                  <textarea 
                    id="mensaje" 
                    name="mensaje" 
                    placeholder="Escribe lo que necesites. No hay forma correcta de empezar..." 
                    rows="5" 
                    class="w-full px-4 py-4 bg-cream border border-border-delicate text-ink focus:outline-none focus:border-olive focus:bg-alabaster resize-none transition-all duration-300 placeholder:text-taupe-light/70"
                    required
                  ></textarea>
                </div>
                
                <div class="pt-4 flex flex-col sm:flex-row items-start sm:items-center gap-6">
                  <button type="submit" class="btn btn-sage w-full sm:w-auto group">
                    <span>Enviar mensaje</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                    </svg>
                  </button>
                  <p class="text-label-sm text-taupe">
                    Te respondo en menos de 24h. <a href="/privacidad" class="text-olive hover:underline underline-offset-2">Privacidad garantizada</a>.
                  </p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA teléfono mejorado -->
    <section class="section bg-charcoal text-alabaster relative overflow-hidden" aria-labelledby="phone-cta-heading">
      
      <!-- Elementos de fondo decorativos -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -bottom-1/2 -left-1/4 w-[80vw] h-[80vw] rounded-full bg-ink blur-[120px] opacity-50"></div>
        <div class="absolute top-1/4 right-1/4 w-64 h-64 rounded-full bg-terracotta/10 blur-[80px]"></div>
      </div>

      <div class="container-editorial relative z-10">
        <div class="max-w-4xl mx-auto text-center" data-reveal>
          
          {/* Círculo decorativo con icono */}
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full border border-alabaster/20 mb-10 relative">
            <div class="absolute inset-0 rounded-full border border-alabaster/10 animate-ping opacity-20"></div>
            <svg class="w-8 h-8 text-terracotta-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
          </div>

          <div class="mb-8">
            <span class="label-section !text-terracotta-light">Si prefieres hablar</span>
          </div>
          <h2 id="phone-cta-heading" class="title-section !text-alabaster mb-8">
            A veces es más fácil <em class="!text-terracotta-light italic">llamar</em>
          </h2>
          <p class="text-body text-taupe-light max-w-2xl mx-auto mb-12">
            No pasa nada si no sabes qué decir. Solo dí "hola" y ya empezamos. Estoy aquí para escucharte.
          </p>
          <a href="tel:+34661471971" class="btn btn-outline !text-alabaster !border-border-strong/30 hover:!bg-terracotta hover:!text-alabaster hover:!border-terracotta inline-flex items-center gap-3 text-lg px-8 py-4">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            <span>661 471 971</span>
          </a>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</Layout>
