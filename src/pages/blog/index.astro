---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { blogPostsList } from '../../data/blog';

const featuredPost = blogPostsList[0];
const recentPosts = blogPostsList.slice(1);

const categories = [...new Set(blogPostsList.map(post => post.category))];
---

<Layout 
  title="Blog de Psicología | María Ángeles Mata"
  description="Artículos sobre psicología, salud mental, terapia y crecimiento personal. Consejos prácticos de una psicóloga clínica con 15+ años de experiencia."
>
  <Header activePage="Blog" />
  
  <main id="main-content">
    
    <!-- Header de página -->
    <section class="pt-12 pb-8 bg-cream">
      <div class="container-editorial">
        <div class="max-w-2xl" data-reveal>
          <div class="mb-4">
            <span class="label-section">Blog</span>
          </div>
          <h1 class="title-section mb-4">
            Reflexiones sobre <em>bienestar</em>
          </h1>
          <p class="text-body">
            Artículos sobre psicología, salud mental y crecimiento personal escritos desde la experiencia clínica.
          </p>
        </div>
      </div>
    </section>

    <!-- Categorías -->
    <section class="pb-8 bg-cream border-b border-border">
      <div class="container-editorial">
        <div class="flex flex-wrap items-center gap-2" data-reveal>
          <span class="text-[11px] text-gray uppercase tracking-wide">Temas:</span>
          {categories.map((category) => (
            <span class="px-2.5 py-1 bg-warm/50 rounded-full text-[11px] text-stone">
              {category}
            </span>
          ))}
        </div>
      </div>
    </section>

    <!-- Artículo destacado -->
    <section class="section-sm bg-cream">
      <div class="container-editorial">
        <div data-reveal>
          <a href={`/blog/${featuredPost.slug}`} class="group block">
            <article class="card overflow-hidden">
              <div class="grid lg:grid-cols-2">
                <div class="relative aspect-[16/10] lg:aspect-auto lg:h-[360px] overflow-hidden">
                  <img 
                    src={featuredPost.image} 
                    alt={featuredPost.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    width="800"
                    height="500"
                    loading="eager"
                  />
                  <div class="absolute top-3 left-3">
                    <span class="px-2.5 py-1 bg-sage text-cream text-[10px] font-medium uppercase tracking-wide rounded-full">
                      Destacado
                    </span>
                  </div>
                </div>
                
                <div class="p-6 lg:p-8 flex flex-col justify-center">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="tag">{featuredPost.category}</span>
                    <span class="text-xs text-gray flex items-center gap-1">
                      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {featuredPost.readTime}
                    </span>
                  </div>
                  
                  <h2 class="font-serif text-2xl lg:text-3xl text-charcoal mb-3 group-hover:text-sage transition-colors leading-tight">
                    {featuredPost.title}
                  </h2>
                  
                  <p class="text-body text-sm mb-5 max-w-lg">
                    {featuredPost.excerpt}
                  </p>
                  
                  <div class="flex items-center justify-between pt-4 border-t border-border">
                    <time class="text-xs text-gray">{featuredPost.date}</time>
                    <span class="flex items-center gap-1.5 text-xs font-medium text-sage group-hover:gap-2 transition-all">
                      Leer artículo
                      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </article>
          </a>
        </div>
      </div>
    </section>

    <!-- Artículos recientes -->
    <section class="section-sm bg-warm/30">
      <div class="container-editorial">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
          {recentPosts.map((post, index) => (
            <article data-reveal data-reveal-delay={100 + index * 100}>
              <a href={`/blog/${post.slug}`} class="group block h-full">
                <div class="card h-full flex flex-col">
                  <div class="relative aspect-[16/10] overflow-hidden">
                    <img 
                      src={post.image} 
                      alt={post.title}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      width="400"
                      height="250"
                      loading="lazy"
                    />
                    <div class="absolute bottom-3 left-3">
                      <span class="px-2 py-0.5 bg-cream/95 text-sage text-[10px] font-medium uppercase tracking-wide rounded-full">
                        {post.category}
                      </span>
                    </div>
                  </div>
                  
                  <div class="flex-1 p-5 flex flex-col">
                    <div class="flex items-center gap-2 text-[11px] text-gray mb-2">
                      <time>{post.dateShort}</time>
                      <span class="w-1 h-1 rounded-full bg-gray"></span>
                      <span class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        {post.readTime}
                      </span>
                    </div>
                    
                    <h3 class="font-serif text-lg text-charcoal mb-2 group-hover:text-sage transition-colors leading-snug flex-1">
                      {post.title}
                    </h3>
                    
                    <p class="text-xs text-stone line-clamp-2 mb-3">
                      {post.excerpt}
                    </p>
                    
                    <div class="flex items-center gap-1.5 text-xs font-medium text-sage pt-3 border-t border-border mt-auto">
                      <span>Leer más</span>
                      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-12 bg-sage">
      <div class="container-editorial">
        <div class="max-w-xl mx-auto text-center" data-reveal>
          <h2 class="font-serif text-2xl text-cream mb-3">
            ¿Tienes dudas sobre <em class="text-warm-light">terapia</em>?
          </h2>
          <p class="text-cream/70 text-sm mb-6">
            Cada persona es única. Si tienes preguntas específicas o quieres saber si la terapia es para ti, puedo ayudarte.
          </p>
          <a href="/contact" class="btn btn-cream text-xs">
            Hacer una consulta
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
