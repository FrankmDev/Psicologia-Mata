---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PageHeader from '../components/PageHeader.astro';
import { allServices } from '../data/services';
---

<Layout 
  title="Servicios de Psicología en Córdoba | Terapia Individual, Pareja y Familiar"
  description="Servicios profesionales de psicología en Córdoba: terapia individual, de pareja, familiar, evaluación neuropsicológica y estimulación cognitiva."
>
  <Header activePage="Servicios" />
  
  <main id="main-content">
    <PageHeader
      label="Servicios"
      title="Servicios de"
      highlight="psicología"
      description="Terapia individual, de pareja y familiar en Córdoba. Atención presencial y a domicilio."
    />

    <section class="section bg-ivory" aria-labelledby="services-heading">
      <div class="container-elegant max-w-4xl">
        <h2 id="services-heading" class="sr-only">Nuestros servicios</h2>
        
        <div class="space-y-6">
          {allServices.map((service, index) => (
            <ServiceCard {...service} index={index} />
          ))}
        </div>
      </div>
    </section>

    <section class="section bg-sage relative overflow-hidden" aria-labelledby="cta-heading">
      <div class="absolute inset-0 bg-grain opacity-[0.03]" aria-hidden="true"></div>
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-ivory/20 to-transparent" aria-hidden="true"></div>
      <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-ivory/20 to-transparent" aria-hidden="true"></div>
      
      <div class="container-elegant relative text-center">
        <div class="max-w-2xl mx-auto">
          <div class="mb-6">
            <div class="inline-flex items-center gap-3 px-4 py-2 border border-ivory/20 rounded-full">
              <div class="w-1.5 h-1.5 rounded-full bg-ivory animate-pulse"></div>
              <span class="text-xs font-medium tracking-widest uppercase text-ivory/70">Sin compromiso</span>
            </div>
          </div>
          
          <h2 id="cta-heading" class="font-serif text-3xl lg:text-4xl text-ivory mb-4">¿No sabes qué servicio necesitas?</h2>
          <p class="text-ivory/70 max-w-md mx-auto mb-8 leading-relaxed">
            En la primera consulta valoramos tu situación y te recomiendo el enfoque más adecuado para ti.
          </p>
          <a href="/contact" class="btn btn-light">
            <span>Pedir consulta</span>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
