---
import "../styles/global.css";
import { ClientRouter } from 'astro:transitions';
import RevealAnimation from '../components/RevealAnimation.astro';

interface Props {
  title: string;
  description?: string;
  type?: 'website' | 'article';
  image?: string;
  canonical?: string;
  noindex?: boolean;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const { 
  title, 
  description = "María Ángeles Mata — Psicóloga en Córdoba. Terapia individual, de pareja y familiar con 15+ años de experiencia.",
  type = 'website',
  image = '/favicon.svg',
  canonical,
  noindex = false,
  author = 'María Ángeles Mata',
  publishedTime,
  modifiedTime
} = Astro.props;

const siteUrl = 'https://psicologia-mata.es';
const canonicalUrl = canonical ? `${siteUrl}${canonical}` : `${siteUrl}${Astro.url.pathname}`;
const ogImage = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#F7F5F0" />
    
    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://images.unsplash.com" />
    
    <!-- Preload critical fonts for LCP improvement -->
    <link rel="preload" href="https://fonts.gstatic.com/s/cormorantgaramond/v16/co3YmX5slCNuHLi8bLeY9MK7whWMhyjQAllvuQWJ5heb_w.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400&family=Manrope:wght@200;300;400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.ico" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    {!noindex && <meta name="robots" content="index, follow, max-image-preview:large" />}
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="María Ángeles Mata - Psicóloga" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:creator" content="@psicologamata" />
    <meta name="twitter:site" content="@psicologamata" />
    
    <!-- Structured Data Slot -->
    <slot name="schema" />
    
    <!-- View Transitions -->
    <ClientRouter />
  </head>

  <body class="antialiased selection:bg-stone/50 bg-alabaster">
    
    <!-- Skip link for accessibility -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[60] focus:px-4 focus:py-3 focus:bg-charcoal focus:text-alabaster focus:rounded-full focus:text-xs tracking-widest uppercase font-sans"
    >
      Saltar al contenido
    </a>

    <!-- Main content -->
    <slot />

    <!-- Scroll progress indicator -->
    <div
      id="scroll-progress"
      class="fixed top-0 left-0 h-[3px] z-[60] bg-olive origin-left scale-x-0 transition-transform duration-[150ms] ease-out"
    >
    </div>
    
    <!-- Reveal animations - Island component, only hydrates when needed -->
    <RevealAnimation />
  </body>
</html>

<script>
  // Scroll progress - inline for immediate execution
  const progress = document.getElementById("scroll-progress");
  if (progress) {
    window.addEventListener(
      "scroll",
      () => {
        const docHeight =
          document.documentElement.scrollHeight - window.innerHeight;
        if (docHeight > 0) {
          progress.style.transform = `scaleX(${window.scrollY / docHeight})`;
        }
      },
      { passive: true },
    );
  }
</script>
