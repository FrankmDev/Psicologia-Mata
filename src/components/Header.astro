---
interface Props {
  activePage?: string;
}

const { activePage = "" } = Astro.props;

const navLinks = [
  { href: "/", label: "Inicio" },
  { href: "/services", label: "Servicios" },
  { href: "/blog", label: "Blog" },
  { href: "/contact", label: "Contacto" },
];
---

<header class="fixed top-0 inset-x-0 z-50" id="header">
  <div class="absolute inset-0 bg-cream/0 backdrop-blur-0 transition-all duration-300" id="header-bg"></div>

  <div class="container-wide relative">
    <div class="flex items-center justify-between h-16 lg:h-20">
      
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 group relative z-10">
        <div class="w-9 h-9 rounded-lg bg-sage/10 flex items-center justify-center group-hover:bg-sage transition-colors">
          <span class="font-serif text-base text-sage group-hover:text-cream italic transition-colors">M</span>
        </div>
        <div class="hidden sm:block">
          <span class="font-serif text-sm text-charcoal block leading-tight">María Ángeles Mata</span>
          <span class="text-[10px] text-gray uppercase tracking-wider">Psicóloga</span>
        </div>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-8 relative z-10">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-sm transition-colors ${
              activePage === link.label ? "text-charcoal font-medium" : "text-gray hover:text-charcoal"
            }`}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- CTA -->
      <div class="hidden lg:flex items-center gap-3 relative z-10">
        <a href="tel:+34661471971" class="w-8 h-8 rounded-full border border-border flex items-center justify-center text-gray hover:text-sage hover:border-sage/30 transition-colors">
          <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
        </a>
        <a href="/contact" class="btn btn-sage text-[10px] py-2.5 px-4">Reservar</a>
      </div>

      <!-- Mobile Toggle -->
      <button class="lg:hidden relative z-10 p-2" id="menu-toggle" aria-label="Menu">
        <div class="flex flex-col gap-1 w-5">
          <span class="w-5 h-0.5 bg-charcoal transition-transform origin-center" id="menu-line-1"></span>
          <span class="w-5 h-0.5 bg-charcoal transition-transform origin-center" id="menu-line-2"></span>
        </div>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="lg:hidden fixed inset-0 bg-cream z-40 opacity-0 pointer-events-none transition-opacity" id="mobile-menu">
    <div class="container-wide pt-24">
      <nav class="flex flex-col gap-1">
        {navLinks.map((link) => (
          <a href={link.href} class="py-3 text-xl font-serif text-charcoal hover:text-sage transition-colors">
            {link.label}
          </a>
        ))}
      </nav>
      <div class="mt-8 pt-8 border-t border-border">
        <a href="/contact" class="btn btn-sage w-full justify-center">Reservar consulta</a>
      </div>
    </div>
  </div>
</header>

<div class="h-16 lg:h-20"></div>

<script>
  const headerBg = document.getElementById("header-bg");
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const line1 = document.getElementById("menu-line-1");
  const line2 = document.getElementById("menu-line-2");
  let menuOpen = false;

  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      headerBg?.classList.add('bg-cream/90', 'backdrop-blur-xl', 'shadow-sm');
    } else {
      headerBg?.classList.remove('bg-cream/90', 'backdrop-blur-xl', 'shadow-sm');
    }
  }, { passive: true });

  menuToggle?.addEventListener("click", () => {
    menuOpen = !menuOpen;
    if (menuOpen) {
      mobileMenu?.classList.remove("opacity-0", "pointer-events-none");
      document.body.style.overflow = "hidden";
      line1 && (line1.style.transform = "translateY(3px) rotate(45deg)");
      line2 && (line2.style.transform = "translateY(-3px) rotate(-45deg)");
    } else {
      mobileMenu?.classList.add("opacity-0", "pointer-events-none");
      document.body.style.overflow = "";
      line1 && (line1.style.transform = "none");
      line2 && (line2.style.transform = "none");
    }
  });
</script>
