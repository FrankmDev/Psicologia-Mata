---
interface Props {
  label: string;
  title: string;
  highlight: string;
  description: string;
}

const { label, title, highlight, description } = Astro.props;
---

<header class="section-sm bg-text-primary relative overflow-hidden">
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 24px 24px;" aria-hidden="true"></div>
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-sage/5 to-transparent" aria-hidden="true"></div>
  
  <div class="container-elegant relative z-10">
    <div class="section-label-dark mb-5">
      <div class="w-4 h-px bg-sage/50"></div>
      <span class="text-xs text-sage/80 font-medium tracking-wider uppercase">{label}</span>
    </div>
    
    <h1 class="font-serif text-3xl lg:text-4xl xl:text-5xl text-white leading-tight mb-4 max-w-3xl">
      {title} <span class="italic text-sage">{highlight}</span>
    </h1>
    
    <p class="text-white/50 text-lg leading-relaxed max-w-xl">{description}</p>
  </div>
</header>
