---
const currentYear = new Date().getFullYear();

const navLinks = [
  { href: "/", label: "Inicio" },
  { href: "/services", label: "Servicios" },
  { href: "/blog", label: "Blog" },
  { href: "/contact", label: "Contacto" },
];

const legalLinks = [
  { href: "/privacidad", label: "Privacidad" },
  { href: "/aviso-legal", label: "Aviso Legal" },
  { href: "/cookies", label: "Cookies" },
];
---

<footer class="bg-ink text-alabaster relative overflow-hidden">
  
  <!-- Fondo con patrón sutil -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23f8f5f0\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  
  <!-- Línea decorativa superior tipo editorial -->
  <div class="absolute top-0 left-0 right-0 flex items-center justify-center pt-0">
    <div class="w-full max-w-[200px] h-[2px] bg-gradient-to-r from-transparent via-terracotta/60 to-transparent"></div>
  </div>

  <div class="container-editorial relative z-10 pt-16 lg:pt-24 pb-10">
    
    <!-- Grid principal editorial -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-12 mb-16 lg:mb-20">
      
      <!-- Brand - Columna principal -->
      <div class="lg:col-span-5">
        <a href="/" class="inline-block mb-6 group">
          <span class="font-serif text-2xl lg:text-3xl text-alabaster tracking-tight group-hover:text-cream transition-colors duration-500">María Ángeles Mata</span>
          <span class="block text-label-xs text-alabaster/60 tracking-[0.25em] mt-2 uppercase">Psicología Clínica</span>
        </a>
        
        <p class="font-serif text-lg lg:text-xl text-alabaster/80 leading-relaxed max-w-sm mb-8">
          Un espacio seguro para explorar tu mundo interior y encontrar tu bienestar.
        </p>
        
        <!-- Contacto directo -->
        <div class="flex flex-wrap gap-4">
          <a href="tel:+34661471971" class="group flex items-center gap-3 text-alabaster hover:text-terracotta-light transition-colors duration-300">
            <span class="w-9 h-9 rounded-full border border-alabaster/20 flex items-center justify-center group-hover:border-terracotta/50 group-hover:bg-terracotta/10 transition-all duration-500">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
            </span>
            <span class="text-label text-alabaster">661 471 971</span>
          </a>
          
          <a href="mailto:mangelesmatacala@hotmail.com" class="group flex items-center gap-3 text-alabaster hover:text-terracotta-light transition-colors duration-300">
            <span class="w-9 h-9 rounded-full border border-alabaster/20 flex items-center justify-center group-hover:border-terracotta/50 group-hover:bg-terracotta/10 transition-all duration-500">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </span>
            <span class="text-label text-alabaster">Email</span>
          </a>
        </div>
      </div>

      <!-- Spacer en desktop -->
      <div class="hidden lg:block lg:col-span-2"></div>

      <!-- Navegación -->
      <div class="lg:col-span-2">
        <h3 class="text-label-sm text-terracotta-light mb-5 tracking-wider uppercase">Menú</h3>
        <ul class="space-y-3">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="text-body-sm text-alabaster hover:text-terracotta-light transition-colors duration-300 block py-1">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Información -->
      <div class="lg:col-span-3">
        <h3 class="text-label-sm text-terracotta-light mb-5 tracking-wider uppercase">Consulta</h3>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <svg class="w-4 h-4 text-terracotta-light mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            <p class="text-body-sm text-alabaster">
              C/ Rodríguez Sánchez, 22<br />
              14003 Córdoba
            </p>
          </div>
          <div class="flex items-start gap-3 pt-3 border-t border-alabaster/10">
            <svg class="w-4 h-4 text-terracotta-light mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-label-xs text-alabaster/60 mb-1">Horario</p>
              <p class="text-body-sm text-alabaster">Lunes a Viernes</p>
              <p class="font-serif text-base text-alabaster">9:00 - 20:00</p>
            </div>
          </div>
        </div>
      </div>

    </div>

    <!-- Divider elegante -->
    <div class="flex items-center gap-4 mb-8">
      <div class="flex-1 h-[1px] bg-gradient-to-r from-transparent to-alabaster/20"></div>
      <div class="w-2 h-2 rounded-full bg-terracotta/40"></div>
      <div class="flex-1 h-[1px] bg-gradient-to-l from-transparent to-alabaster/20"></div>
    </div>

    <!-- Bottom bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-label-xs text-alabaster/50">
        &copy; {currentYear} María Ángeles Mata
      </p>

      <div class="flex items-center gap-2">
        <span class="w-1.5 h-1.5 rounded-full bg-terracotta/60"></span>
        <span class="text-label-xs text-alabaster/60">Colegiada AN-01452</span>
      </div>

      <div class="flex items-center gap-6">
        {legalLinks.map((link) => (
          <a href={link.href} class="text-label-xs text-alabaster/50 hover:text-alabaster transition-colors duration-300">
            {link.label}
          </a>
        ))}
      </div>
    </div>

  </div>
</footer>