---
import { blogPostsList } from '../../data/blog';

const previewPosts = blogPostsList.slice(0, 3);
const featuredPost = previewPosts[0];
const secondaryPosts = previewPosts.slice(1);
---

<section class="section bg-bg-muted relative overflow-hidden" id="blog">
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-border-medium to-transparent" aria-hidden="true"></div>
  
  <div class="container-elegant relative z-10">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-12 opacity-0" data-animate>
      <div class="max-w-xl">
        <div class="section-label mb-5 w-fit">
          <div class="w-4 h-px bg-sage"></div>
          <span class="eyebrow !mb-0 text-xs">Blog</span>
        </div>
        <h2 class="font-serif text-3xl lg:text-4xl text-text-primary leading-tight">
          Reflexiones sobre <span class="italic text-sage">bienestar</span>
        </h2>
      </div>
      
      <a href="/blog" class="btn btn-outline btn-sm self-start lg:self-auto group/btn">
        <span>Ver todos</span>
        <svg class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
        </svg>
      </a>
    </div>

    <div class="grid lg:grid-cols-5 gap-6 lg:gap-8 items-stretch">
      <a 
        href={`/blog/${featuredPost.slug}`} 
        class="group lg:col-span-3 relative opacity-0 h-full"
        data-animate
        style="animation-delay: 0.15s"
      >
        <article class="relative h-full min-h-[380px] lg:min-h-[480px] overflow-hidden rounded-2xl border border-border-light transition-all duration-500 hover:shadow-xl hover:shadow-sage/5">
          <div class="absolute inset-0">
            <img 
              src={featuredPost.image} 
              alt={featuredPost.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              width="800"
              height="600"
              loading="eager"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-charcoal/85 via-charcoal/40 to-transparent" aria-hidden="true"></div>
          </div>
          
          <div class="absolute inset-0 flex flex-col justify-end p-6 lg:p-8">
            <div class="flex items-center gap-3 mb-3">
              <span class="px-3 py-1 bg-white/90 backdrop-blur-sm text-xs font-medium text-charcoal rounded-full">
                {featuredPost.category}
              </span>
              <span class="text-white/60 text-xs flex items-center gap-1.5">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {featuredPost.readTime}
              </span>
            </div>
            
            <h3 class="font-serif text-2xl lg:text-3xl text-white leading-snug mb-3 group-hover:text-sage transition-colors duration-300">
              {featuredPost.title}
            </h3>
            
            <p class="text-white/70 text-sm lg:text-base leading-relaxed max-w-lg mb-4">
              {featuredPost.excerpt}
            </p>
            
            <div class="flex items-center justify-between pt-4 border-t border-white/20">
              <time class="text-white/50 text-xs">{featuredPost.date}</time>
              <span class="flex items-center gap-2 text-sm font-medium text-white group-hover:text-sage transition-colors">
                Leer articulo
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                </svg>
              </span>
            </div>
          </div>
        </article>
      </a>

      <div class="lg:col-span-2 flex flex-col gap-6 h-full">
        {secondaryPosts.map((post, index) => (
          <a 
            href={`/blog/${post.slug}`} 
            class="group opacity-0 flex-1"
            data-animate
            style={`animation-delay: ${0.25 + index * 0.1}s`}
          >
            <article class="bg-bg-surface rounded-2xl border border-border-light overflow-hidden transition-all duration-500 hover:shadow-xl hover:shadow-sage/5 hover:-translate-y-1 h-full flex">
              <div class="relative w-2/5 overflow-hidden shrink-0">
                <img 
                  src={post.image} 
                  alt={post.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  width="300"
                  height="200"
                  loading="lazy"
                />
              </div>
              
              <div class="flex-1 p-5 flex flex-col">
                <div class="flex items-center gap-2 mb-2">
                  <span class="text-xs font-medium text-sage">
                    {post.category}
                  </span>
                  <span class="w-1 h-1 rounded-full bg-text-tertiary"></span>
                  <span class="text-xs text-text-tertiary">{post.readTime}</span>
                </div>
                
                <h3 class="font-serif text-lg text-text-primary leading-snug mb-2 group-hover:text-sage transition-colors duration-300">
                  {post.title}
                </h3>
                
                <p class="text-body text-sm flex-1">
                  {post.excerpt}
                </p>
                
                <div class="flex items-center justify-between pt-3 mt-3 border-t border-border-light">
                  <time class="text-xs text-text-tertiary">{post.date}</time>
                  <span class="flex items-center gap-1.5 text-xs font-medium text-sage group-hover:gap-2 transition-all">
                    Leer
                    <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </article>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
