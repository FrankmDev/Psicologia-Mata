---
import { blogPostsList } from '../../data/blog';

const previewPosts = blogPostsList.slice(0, 3);
---

<section class="section bg-bg-muted relative overflow-hidden" id="blog">
  <div class="container-elegant relative z-10">
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-6 mb-12 opacity-0" data-animate>
      <div class="max-w-xl">
        <div class="flex items-center gap-4 mb-4">
          <div class="w-12 h-px bg-sage"></div>
          <span class="eyebrow !mb-0">Blog</span>
        </div>
        <h2 class="font-serif text-3xl lg:text-4xl text-text-primary leading-tight">
          Reflexiones sobre <span class="italic text-sage">bienestar</span>
        </h2>
      </div>
      
      <a href="/blog" class="btn btn-outline btn-sm self-start lg:self-auto group/btn">
        <span>Ver todos</span>
        <svg class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
        </svg>
      </a>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {previewPosts.map((post, index) => (
        <a 
          href={`/blog/${post.slug}`} 
          class={`group opacity-0 ${index === 1 ? 'lg:mt-6' : ''}`}
          data-animate
          style={`animation-delay: ${(index + 1) * 0.15}s`}
        >
          <article class="bg-bg-surface rounded-2xl overflow-hidden border border-border-light transition-all duration-500 hover:shadow-xl hover:shadow-sage/5 hover:-translate-y-1 h-full flex flex-col">
            <div class="relative aspect-[16/10] overflow-hidden">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                width="400"
                height="250"
                loading={index === 0 ? "eager" : "lazy"}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent" aria-hidden="true"></div>
              
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-xs font-medium text-text-primary">
                  {post.category}
                </span>
              </div>
              
              <div class="absolute bottom-4 right-4 flex items-center gap-1.5 px-2.5 py-1 bg-white/90 backdrop-blur-sm rounded-full">
                <svg class="w-3.5 h-3.5 text-text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-xs font-medium text-text-secondary">{post.readTime}</span>
              </div>
            </div>
            
            <div class="p-6 flex flex-col flex-1">
              <h3 class="font-serif text-xl text-text-primary mb-3 group-hover:text-sage transition-colors duration-300 leading-snug">
                {post.title}
              </h3>
              
              <p class="text-body line-clamp-2 mb-4 flex-1">
                {post.excerpt}
              </p>
              
              <div class="flex items-center justify-between pt-4 border-t border-border-light">
                <span class="text-xs text-text-tertiary">{post.date}</span>
                <span class="flex items-center gap-1 text-xs font-medium text-sage group-hover:gap-2 transition-all">
                  Leer
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                  </svg>
                </span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</section>
