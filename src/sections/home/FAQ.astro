---
import FAQItem from '../../components/FAQItem.astro';
import { faqs } from '../../data/faqs';
---

<section class="section bg-warm/30" id="faqs">
  <div class="container-editorial">
    
    <!-- Header -->
    <div class="text-center mb-10">
      <div class="justify-center mb-3" data-reveal>
        <span class="label-section">Preguntas frecuentes</span>
      </div>
      
      <h2 class="title-section" data-reveal data-reveal-delay="100">
        Resolvemos tus <em>dudas</em>
      </h2>
    </div>
    
    <!-- FAQs -->
    <div class="max-w-2xl mx-auto space-y-3 mb-10">
      {faqs.map((faq, index) => (
        <div data-reveal data-reveal-delay={150 + index * 60}>
          <FAQItem question={faq.question} index={index}>
            {faq.answer}
          </FAQItem>
        </div>
      ))}
    </div>
    
    <!-- CTA Card -->
    <div class="max-w-2xl mx-auto" data-reveal data-reveal-delay="500">
      <div class="bg-sage rounded-xl p-6 lg:p-8 relative overflow-hidden">
        <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 16px 16px;"></div>
        
        <div class="relative z-10 flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="text-center sm:text-left">
            <p class="text-cream/60 text-xs mb-1">¿Tienes otra pregunta?</p>
            <p class="font-serif text-xl text-cream">Estoy aquí para ayudarte</p>
          </div>
          <a href="/contact" class="btn btn-cream text-xs shrink-0">Contacta conmigo</a>
        </div>
      </div>
    </div>
  </div>
</section>
