---
import { mainServices } from '../../data/services';
---

<section class="section bg-bg-muted relative overflow-hidden" id="servicios">
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-border-medium to-transparent" aria-hidden="true"></div>
  
  <div class="container-elegant relative z-10">
    <div class="text-center max-w-2xl mx-auto mb-14 lg:mb-16 opacity-0" data-animate>
      <div class="section-label inline-flex mb-4">
        <div class="w-5 h-px bg-sage"></div>
        <span class="eyebrow !mb-0 text-xs">Áreas de Especialidad</span>
        <div class="w-5 h-px bg-sage"></div>
      </div>
      
      <h2 class="font-serif text-3xl lg:text-4xl text-text-primary leading-tight">
        Acompañamiento <span class="italic text-sage font-light">especializado</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      {mainServices.map((service, index) => (
        <a 
          href="/services" 
          class="group bg-bg-surface rounded-2xl p-7 border border-border-light transition-all duration-500 hover:shadow-card-hover hover:-translate-y-1.5 hover:border-sage/15 opacity-0"
          data-animate
          style={`animation-delay: ${(index + 1) * 0.1}s`}
        >
          <div class="w-14 h-14 rounded-xl bg-sage/10 flex items-center justify-center text-sage mb-5 transition-all duration-300 group-hover:bg-sage group-hover:text-white group-hover:scale-110 group-hover:shadow-lg group-hover:shadow-sage/20">
            <Fragment set:html={service.icon} />
          </div>
          
          <h3 class="font-serif text-xl text-text-primary mb-3 group-hover:text-sage transition-colors duration-300">
            {service.title}
          </h3>
          
          <p class="text-body line-clamp-3 mb-5">
            {service.shortDescription}
          </p>
          
          <div class="flex items-center gap-2 text-sm font-medium text-text-primary group-hover:text-sage transition-colors pt-4 border-t border-border-light">
            <span>Explorar servicio</span>
            <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
            </svg>
          </div>
        </a>
      ))}
    </div>
    
    <div class="mt-12 text-center opacity-0" data-animate style="animation-delay: 0.4s">
      <a href="/services" class="btn btn-outline">
        <span>Ver todos los servicios</span>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
