---
import { mainServices } from '../../data/services';

const serviceImages = [
  'https://images.unsplash.com/photo-1573497620053-ea5300f94f21?auto=format&fit=crop&w=800&q=80',
  'https://images.unsplash.com/photo-1516589178581-6cd7833ae3b2?auto=format&fit=crop&w=800&q=80',
  'https://images.unsplash.com/photo-1511895426328-dc8714191300?auto=format&fit=crop&w=800&q=80',
];
---

<section class="section bg-warm/50" id="servicios">
  <div class="container-wide">
    
    <!-- Header alineado -->
    <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-4 mb-10">
      <div data-reveal>
        <div class="mb-3">
          <span class="label-section">Áreas de especialidad</span>
        </div>
        <h2 class="title-section">
          Acompañamiento <em>especializado</em>
        </h2>
      </div>
      
      <div class="flex items-center gap-6" data-reveal data-reveal-delay="100">
        <p class="text-body max-w-xs hidden xl:block text-sm">
          Cada servicio diseñado para tus necesidades específicas.
        </p>
        <a href="/services" class="btn btn-outline text-xs py-2.5 px-5">Ver todos</a>
      </div>
    </div>

    <!-- Grid compacto -->
    <div class="grid md:grid-cols-3 gap-5">
      {mainServices.map((service, index) => (
        <a href="/services" class="group block" data-reveal data-reveal-delay={100 + index * 100}>
          <article class="card h-full flex flex-col">
            
            <!-- Imagen más compacta -->
            <div class="relative h-48 overflow-hidden">
              <img 
                src={serviceImages[index]} 
                alt={service.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                width="400"
                height="300"
                loading={index === 0 ? "eager" : "lazy"}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-charcoal/70 via-charcoal/20 to-transparent"></div>
              
              <div class="absolute top-3 left-3 w-9 h-9 rounded-lg bg-cream/95 flex items-center justify-center text-sage shadow-sm">
                <Fragment set:html={service.icon} />
              </div>
              
              <h3 class="absolute bottom-3 left-3 right-3 font-serif text-lg text-cream">{service.title}</h3>
            </div>
            
            <div class="p-5 flex flex-col flex-1">
              <p class="text-body text-sm leading-relaxed mb-4 flex-1">
                {service.shortDescription}
              </p>
              
              <div class="flex items-center justify-between pt-4 border-t border-border">
                <div class="flex items-center gap-1.5">
                  <svg class="w-3.5 h-3.5 text-sage" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-xs text-gray">{service.duration}</span>
                </div>
                
                <span class="flex items-center gap-1 text-xs font-medium text-sage group-hover:gap-2 transition-all">
                  Ver más
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.75L21 12m0 0l-3.75 3.25M21 12H3" />
                  </svg>
                </span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
    
    <!-- Stats más compactos -->
    <div class="mt-12 pt-8 border-t border-border" data-reveal data-reveal-delay="400">
      <div class="grid grid-cols-4 gap-4">
        <div class="text-center">
          <p class="font-serif text-3xl text-sage">15+</p>
          <p class="text-[10px] text-gray uppercase tracking-wide mt-1">Años</p>
        </div>
        <div class="text-center">
          <p class="font-serif text-3xl text-sage">800+</p>
          <p class="text-[10px] text-gray uppercase tracking-wide mt-1">Pacientes</p>
        </div>
        <div class="text-center">
          <p class="font-serif text-3xl text-sage">98%</p>
          <p class="text-[10px] text-gray uppercase tracking-wide mt-1">Satisfacción</p>
        </div>
        <div class="text-center">
          <p class="font-serif text-3xl text-sage">5</p>
          <p class="text-[10px] text-gray uppercase tracking-wide mt-1">Especialidades</p>
        </div>
      </div>
    </div>
  </div>
</section>
