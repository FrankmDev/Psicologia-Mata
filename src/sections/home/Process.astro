---
const steps = [
  { number: '01', title: 'Primera sesión', subtitle: 'Conocernos', description: 'Compartes tu historia y expectativas en un ambiente de confianza.' },
  { number: '02', title: 'Evaluación', subtitle: 'Entenderte', description: 'Definimos objetivos terapéuticos y un plan adaptado a ti.' },
  { number: '03', title: 'Intervención', subtitle: 'Trabajar', description: 'Sesiones prácticas con herramientas basadas en evidencia.' },
  { number: '04', title: 'Seguimiento', subtitle: 'Crecer', description: 'Evaluamos progreso y ajustamos para mantener tu evolución.' },
];
---

<section class="section bg-cream" id="proceso">
  <div class="container-editorial">
    
    <!-- Header centrado -->
    <div class="text-center max-w-xl mx-auto mb-12">
      <div class="justify-center mb-3" data-reveal>
        <span class="label-section">Proceso terapéutico</span>
      </div>
      <h2 class="title-section mb-4" data-reveal data-reveal-delay="100">
        Un camino hacia tu <em>bienestar</em>
      </h2>
      <p class="text-body text-sm" data-reveal data-reveal-delay="200">
        Cada etapa diseñada para acompañarte progresivamente.
      </p>
    </div>

    <!-- Proceso conectado -->
    <div class="relative" data-reveal data-reveal-delay="300">
      
      <!-- Línea conectora -->
      <div class="hidden lg:block absolute top-[52px] left-[12.5%] right-[12.5%] h-px bg-sage/20">
        <div class="absolute inset-0 flex justify-between px-[15%]">
          <div class="w-1.5 h-1.5 rounded-full bg-sage/40 mt-[-2px]"></div>
          <div class="w-1.5 h-1.5 rounded-full bg-sage/40 mt-[-2px]"></div>
          <div class="w-1.5 h-1.5 rounded-full bg-sage/40 mt-[-2px]"></div>
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4">
        {steps.map((step, index) => (
          <div class="group text-center">
            <div class="card p-6 h-full">
              
              <!-- Número -->
              <div class="relative mb-5">
                <div class="w-14 h-14 mx-auto rounded-full border-2 border-sage/20 flex items-center justify-center transition-all group-hover:border-sage group-hover:bg-sage">
                  <span class="font-serif text-lg text-sage group-hover:text-cream transition-colors">{step.number}</span>
                </div>
              </div>
              
              <p class="text-[10px] text-sage uppercase tracking-wide mb-1">{step.subtitle}</p>
              <h3 class="font-serif text-xl text-charcoal mb-2 group-hover:text-sage transition-colors">{step.title}</h3>
              <p class="text-body text-xs leading-relaxed">{step.description}</p>
            </div>
            
            {index < steps.length - 1 && (
              <div class="lg:hidden flex justify-center py-3">
                <svg class="w-4 h-4 text-sage/30" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
    
    <!-- Info bottom -->
    <div class="mt-10 pt-8 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-6">
      <div class="flex items-center gap-8">
        <div class="flex items-center gap-2.5">
          <div class="w-9 h-9 rounded-lg bg-sage/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-sage" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-charcoal">50 minutos</p>
            <p class="text-[10px] text-gray">por sesión</p>
          </div>
        </div>
        
        <div class="flex items-center gap-2.5">
          <div class="w-9 h-9 rounded-lg bg-sage/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-sage" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
            </svg>
          </div>
          <div>
            <p class="text-sm font-medium text-charcoal">Lunes a Viernes</p>
            <p class="text-[10px] text-gray">9:00 - 20:00</p>
          </div>
        </div>
      </div>
      
      <a href="/contact" class="btn btn-sage text-xs">Empezar mi proceso</a>
    </div>
  </div>
</section>
